<% include ../partials/header %>      <!-- import header.ejs file -->
<br>
<div class="recipe_list_title">
    <h2 >List Of Recipes</h2>
</div>
 
    <div class="recipe_list">
          <%recipes.reverse().forEach(recipe =>{%>
          <a href="/user_recipes/<%=recipe.recipe_id%>">
           <div class="recipes">  
            <div>
             <img class="recipe_image" src="<%=recipe.image_url%>" alt="RECIPE IMAGE"> 
            </div>
            <div>
                <h2><%=recipe.recipe_name%> </h2>
                <p><%=recipe.description%></p><br>
            </div>            
        </div></a>
      <%}) %>
        </div>
     
    </div>
   <% include ../partials/footer %>     